rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is a member of a house
    function isMember(houseId) {
      return request.auth != null &&
             request.auth.uid in get(/databases/$(database)/documents/houses/$(houseId)).data.members;
    }

    // Helper function to check if user is an admin of a house
    function isAdmin(houseId) {
      return request.auth != null &&
             get(/databases/$(database)/documents/houses/$(houseId)).data.members[request.auth.uid].role == 'admin';
    }

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Houses collection - Main virtual house data
    match /houses/{houseId} {
      // Allow read only if user is a member of the house
      allow read: if isMember(houseId);

      // Allow create only if authenticated and user adds themselves as admin
      allow create: if isAuthenticated() &&
                       request.auth.uid in request.resource.data.members &&
                       request.resource.data.members[request.auth.uid].role == 'admin';

      // Allow update only if user is a member
      // Members can update house info (bedrooms, bathrooms, decorations)
      // Only admins can modify members list
      allow update: if isMember(houseId) && (
        // Members can update house info and decorations
        (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['members', 'inviteCode'])) ||
        // Only admins can modify members or invite code
        isAdmin(houseId)
      );

      // Only admins can delete houses
      allow delete: if isAdmin(houseId);
    }

    // House decorations subcollection (for future decoration feature)
    match /houses/{houseId}/decorations/{decorationId} {
      allow read: if isMember(houseId);
      allow write: if isMember(houseId);
    }

    // House furniture subcollection (for future furniture placement)
    match /houses/{houseId}/furniture/{furnitureId} {
      allow read: if isMember(houseId);
      allow write: if isMember(houseId);
    }

    // Next meetings collection - scheduled house meetings
    match /nextMeetings/{houseId} {
      allow read: if isMember(houseId);
      allow write: if isMember(houseId);
    }

    // Tasks collection - house tasks
    match /tasks/{taskId} {
      allow read: if isAuthenticated() &&
                     isMember(resource.data.houseId);
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() &&
                              isMember(resource.data.houseId);
    }

    // Messages collection - house chat messages
    match /messages/{messageId} {
      allow read: if isAuthenticated() &&
                     isMember(resource.data.houseId);
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() &&
                              request.auth.uid == resource.data.senderId;
    }

    // User profiles
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }

    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
